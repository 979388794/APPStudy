<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="30dp"
    android:orientation="vertical"
    tools:ignore="RtlSymmetry">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/tv_child_content_net_state"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:background="@color/white"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:padding="2dp"
            android:text="net_state:0"
            android:textColor="#000"
            android:textSize="@dimen/second_title_text_size" />

        <TextView
            android:id="@+id/tv_child_content_reason"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/tv_child_content_net_state"
            android:background="@color/white"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:padding="2dp"
            android:text="reason:Network"
            android:textColor="#000"
            android:textSize="@dimen/second_title_text_size" />


        <TextView
            android:id="@+id/tv_child_content_time"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:padding="2dp"
            android:text="time:110337"
            android:textColor="#000"
            android:textSize="@dimen/second_title_text_size" />

        <TextView
            android:id="@+id/tv_child_content_diag_index"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/tv_child_content_time"
            android:background="@color/white"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:padding="2dp"
            android:text="diag_index:0"
            android:textColor="#000"
            android:textSize="@dimen/second_title_text_size" />

        <TextView
            android:id="@+id/tv_child_content_diag_len"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/tv_child_content_diag_index"
            android:background="@color/white"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:padding="2dp"
            android:text="diag_index:0"
            android:textColor="#000"
            android:textSize="@dimen/second_title_text_size" />

        <ImageView
            android:id="@+id/iv_child_view"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="25dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/icon_warning"
            android:scaleType="centerInside" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e3e3e3" />
</LinearLayout>