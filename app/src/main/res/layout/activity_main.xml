<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/test_toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/theme_color"
        app:layout_constraintBottom_toTopOf="@+id/Title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_test_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ToolBar"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <HorizontalScrollView
        android:id="@+id/Title"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/text_view1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/pink"
                android:text="Textview"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@color/pink"
                android:text="editText"
                android:textAllCaps="false"
                app:layout_constraintLeft_toRightOf="@+id/text_view1" />

            <Button
                android:id="@+id/radioButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@color/pink"
                android:text="radioButton"
                android:textAllCaps="false"
                app:layout_constraintLeft_toRightOf="@+id/editText" />


            <Button
                android:id="@+id/imageview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@color/pink"
                android:text="imageview"
                android:textAllCaps="false"
                app:layout_constraintLeft_toRightOf="@+id/radioButton" />

            <Button
                android:id="@+id/LineChart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@color/pink"
                android:text="LineChart"
                android:textAllCaps="false"
                app:layout_constraintLeft_toRightOf="@+id/imageview" />

            <Button
                android:id="@+id/LineChart2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@color/pink"
                android:text="LineChart2"
                android:textAllCaps="false"
                app:layout_constraintLeft_toRightOf="@+id/LineChart" />

            <Button
                android:id="@+id/CustomView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@color/pink"
                android:text="CustomView"
                android:textAllCaps="false"
                app:layout_constraintLeft_toRightOf="@+id/LineChart2" />

            <Button
                android:id="@+id/CustomViewGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@color/pink"
                android:text="CustomViewGroup"
                android:textAllCaps="false"
                app:layout_constraintLeft_toRightOf="@+id/CustomView" />

            <Button
                android:id="@+id/ViewModel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@color/pink"
                android:text="ViewModel"
                android:textAllCaps="false"
                app:layout_constraintLeft_toRightOf="@+id/CustomViewGroup" />

            <Button
                android:id="@+id/LiveData"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@color/pink"
                android:text="LiveData"
                android:textAllCaps="false"
                app:layout_constraintLeft_toRightOf="@+id/ViewModel" />

            <Button
                android:id="@+id/Fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@color/pink"
                android:text="Fragment"
                android:textAllCaps="false"
                app:layout_constraintLeft_toRightOf="@+id/LiveData" />

            <Button
                android:id="@+id/PowerControl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@color/pink"
                android:text="PowerControl"
                android:textAllCaps="false"
                app:layout_constraintLeft_toRightOf="@+id/Fragment" />

            <Button
                android:id="@+id/ViewTreeObserver"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@color/pink"
                android:text="ViewTreeObserver"
                android:textAllCaps="false"
                app:layout_constraintLeft_toRightOf="@+id/PowerControl" />

            <Button
                android:id="@+id/SensorManagerTest"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@color/pink"
                android:text="SensorManagerTest"
                android:textAllCaps="false"
                app:layout_constraintLeft_toRightOf="@+id/ViewTreeObserver" />

            <Button
                android:id="@+id/DialogTest"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@color/pink"
                android:text="DialogTest"
                android:textAllCaps="false"
                app:layout_constraintLeft_toRightOf="@+id/SensorManagerTest" />

            <Button
                android:id="@+id/list_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@color/pink"
                android:text="List_Recycler_View_Test"
                android:textAllCaps="false"
                app:layout_constraintLeft_toRightOf="@+id/DialogTest" />

            <Button
                android:id="@+id/Preference_Test"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@color/pink"
                android:text="Preference_Test"
                android:textAllCaps="false"
                app:layout_constraintLeft_toRightOf="@+id/list_recycler_view" />

            <Button
                android:id="@+id/System_service_Test"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@color/pink"
                android:text="System_service_Test"
                android:textAllCaps="false"
                app:layout_constraintLeft_toRightOf="@+id/Preference_Test" />

            <Button
                android:id="@+id/WindowManager_Test"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@color/pink"
                android:text="WindowManager_Test"
                android:textAllCaps="false"
                app:layout_constraintLeft_toRightOf="@+id/System_service_Test" />

            <Button
                android:id="@+id/Display_Adapter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@color/pink"
                android:text="屏幕适配"
                android:textAllCaps="false"
                app:layout_constraintLeft_toRightOf="@+id/WindowManager_Test" />

            <Button
                android:id="@+id/OpenGl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@color/pink"
                android:text="gpu测试"
                android:textAllCaps="false"
                app:layout_constraintLeft_toRightOf="@+id/Display_Adapter" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </HorizontalScrollView>


    <FrameLayout
        android:id="@+id/ActivityContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </FrameLayout>


</LinearLayout>

